#include<stdio.h>
#include<string.h>
 
int main()
{
    char s[1000],w[1000];  
    int i=0,k=0,c,j=0,index;
 
    printf("Enter  the string : ");
    gets(s);
    printf("Enter word to be searched: ");
    gets(w);
    while(s[i]!='\0')
    {
    	        
		if(s[i]==w[0])
    	{
    		k=1;
    		for(c=1;w[c]!='\0';c++)
    		{
    			i++;
		}
    	
	}
        	str[j++]=str[i];
		i++;
	       	
   }
   printf("String is %s\n",str);
 return 0;

}
